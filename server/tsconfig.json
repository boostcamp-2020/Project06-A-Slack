{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true, 
    "target": "es5",
    "lib": ["ES6"],
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports":true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames":true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["./src/**/*"],
  "exculde": ["node_modules"]
}
