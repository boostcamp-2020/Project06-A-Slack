{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "target": "es5",
    "noImplicitAny": true,
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports":true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames":true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@config/*": ["./config/*"],
      "@lib/*": ["./lib/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@models/*": ["./models/*"],
      "@routes/*": ["./routes/*"],
      "@services/*": ["./services/*"],
      "@controllers/*": ["./controllers/*"],
    },
  },
  "ts-node": {
    "transpileOnly": true
  },
  "include": ["./src/**/*"],
  "exculde": ["node_modules"]
}
