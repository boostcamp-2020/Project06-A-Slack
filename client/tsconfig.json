{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@services/*": ["./services/*"],
      "@lib/*": ["./lib/*"],
      "@store/*": ["./store/*"],
      "@constants/*": ["./constants/*"],
      "@api/*": ["./api/*"],
      "@imgs/*": ["./imgs/*"],
      "@styles/*": ["./styles/*"],
      "@hoc/*": ["./hoc/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}